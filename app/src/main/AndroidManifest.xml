<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmn.healthassistant">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HealthAssistantApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentHealth">
        <activity
            android:name=".ui.diet.DetailedActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.common.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.individuality.login.LoginActivity" />
        <activity android:name=".ui.individuality.login.RegisterActivity" />
        <activity android:name=".ui.common.MainActivity" />
    </application>

</manifest>