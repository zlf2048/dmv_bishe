<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentHealth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ripple_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ripple_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/checkbox_gray</item>
        <item name="colorControlActivated">@color/checkbox_gray</item>
    </style>

    <style name="PersonalHomepageActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/ripple_color</item>
        <item name="colorPrimaryVariant">@color/ripple_color</item>
        <item name="colorSecondary">@color/ripple_color</item>
        <item name="colorSecondaryVariant">@color/ripple_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--动画:向上动画-->
    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/set_up_in</item>
        <item name="android:windowExitAnimation">@anim/set_up_out</item>
    </style>
</resources>